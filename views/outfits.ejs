<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>StyleIt!</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .container-left {
      text-align: left;
    }
    .card-container {
      margin-left: 0;
    }
    .comment {
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">StyleIt!</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/outfits">Outfits!</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Header Section -->
  <div class="container mt-4 container-left">
    <div class="row">
      <div class="col-12">
        <h2 class="text-start">Your Outfits</h2>
      </div>
    </div>
    <!-- Card Section -->
    <div class="row row-cols-1 row-cols-md-2 g-4 card-container">
      <% if (outfits && outfits.length > 0) { %>
        <% outfits.forEach(outfit => { %>
          <div class="col">
              <div class="card h-100">
                  <img src="/images/<%= outfit.outfitImage %>" class="card-img-top" alt="Outfit Image">
                  <div class="card-body">
                      <h5 class="card-title"><%= outfit.outfitName %></h5>
                      <p class="card-text"><%= outfit.outfitDescription %></p>
                      <a href="/editOutfit/<%= outfit.outfitID %>" class="btn btn-primary me-2">Edit</a>
                      <form action="/deleteOutfit/<%= outfit.outfitID %>" method="POST" class="d-inline">
                          <button type="submit" class="btn btn-danger">Delete</button>
                      </form>
                  </div>
              </div>
          </div>
      <% }); %>
    
      <% } else { %>
        <div class="col-12">
          <p>No outfits found.</p>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>

